<body>
    <div class="container">
        <h1>ğŸ” è¯ä¹¦åŒæ­¥ç®¡ç†ç³»ç»Ÿ</h1>
        <p class="subtitle">å¿«é€ŸåŒæ­¥ SSL è¯ä¹¦åˆ°å¤šå°æœåŠ¡å™¨</p>

        <form id="syncForm">
            <div class="form-group">
                <label for="domain">åŸŸå *</label>
                <div class="domain-selector">
                    <select id="domain" name="domain" required>
                        <option value="">åŠ è½½ä¸­...</option>
                    </select>
                    <button type="button" id="refreshDomains">ğŸ”„ åˆ·æ–°</button>
                </div>
                <div class="helper-text">ä» ACME è¯ä¹¦ç›®å½•è‡ªåŠ¨æ£€æµ‹åˆ°çš„åŸŸå</div>
            </div>

            <div class="form-group">
                <label>ç›®æ ‡æœåŠ¡å™¨</label>
                <div class="radio-group">
                    <label class="radio-option selected">
                        <input type="radio" name="target_mode" value="all" checked>
                        <span>æ‰€æœ‰æœåŠ¡å™¨</span>
                    </label>
                    <label class="radio-option">
                        <input type="radio" name="target_mode" value="specific">
                        <span>æŒ‡å®šæœåŠ¡å™¨</span>
                    </label>
                </div>
            </div>

            <div class="form-group" id="specificIpsGroup">
                <label>æœåŠ¡å™¨åˆ—è¡¨</label>
                <div class="server-table-container">
                    <table class="server-table">
                        <thead>
                            <tr>
                                <th style="width: 50%;">IP åœ°å€</th>
                                <th style="width: 30%;">ç«¯å£</th>
                                <th style="width: 20%;">æ“ä½œ</th>
                            </tr>
                        </thead>
                        <tbody id="serverTableBody">
                            <tr class="empty-row">
                                <td colspan="3" class="empty-table-message">
                                    æš‚æ— æœåŠ¡å™¨ï¼Œç‚¹å‡»ä¸‹æ–¹"æ·»åŠ æœåŠ¡å™¨"æŒ‰é’®å¼€å§‹æ·»åŠ 
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <button type="button" id="addServerBtn" class="add-server-btn">
                    â• æ·»åŠ æœåŠ¡å™¨
                </button>
                <div class="helper-text">ç‚¹å‡»"æ·»åŠ æœåŠ¡å™¨"æŒ‰é’®æ¥æ·»åŠ è¦åŒæ­¥çš„æœåŠ¡å™¨</div>
            </div>

            <button type="submit" id="submitBtn">
                <span id="btnText">å¼€å§‹åŒæ­¥</span>
            </button>
        </form>

        <div class="log-container" id="logContainer"></div>
    </div>

    <script>
        const form = document.getElementById('syncForm');
        const logContainer = document.getElementById('logContainer');
        const submitBtn = document.getElementById('submitBtn');
        const btnText = document.getElementById('btnText');
        const specificIpsGroup = document.getElementById('specificIpsGroup');
        const radioOptions = document.querySelectorAll('.radio-option');
        const domainSelect = document.getElementById('domain');
        const refreshDomainsBtn = document.getElementById('refreshDomains');
        const serverTableBody = document.getElementById('serverTableBody');
        const addServerBtn = document.getElementById('addServerBtn');

        let serverCount = 0;

        // Load available domains
        async function loadDomains() {
            try {
                domainSelect.innerHTML = '<option value="">åŠ è½½ä¸­...</option>';
                const response = await fetch('/api/domains');
                const data = await response.json();

                if (data.success && data.domains.length > 0) {
                    domainSelect.innerHTML = '<option value="">è¯·é€‰æ‹©åŸŸå</option>';
                    data.domains.forEach(domain => {
                        const option = document.createElement('option');
                        option.value = domain;
                        option.textContent = domain;
                        domainSelect.appendChild(option);
                    });
                } else if (data.success && data.domains.length === 0) {
                    domainSelect.innerHTML = '<option value="">æœªæ‰¾åˆ°å¯ç”¨åŸŸå</option>';
                } else {
                    domainSelect.innerHTML = '<option value="">åŠ è½½å¤±è´¥</option>';
                    console.error('Failed to load domains:', data.error);
                }
            } catch (error) {
                domainSelect.innerHTML = '<option value="">åŠ è½½å¤±è´¥</option>';
                console.error('Error loading domains:', error);
            }
        }

        // Add server row to table
        function addServerRow(ip = '', port = '22') {
            // Remove empty message if exists
            const emptyRow = serverTableBody.querySelector('.empty-row');
            if (emptyRow) {
                emptyRow.remove();
            }

            serverCount++;
            const row = document.createElement('tr');
            row.innerHTML = `
                <td><input type="text" class="server-ip" placeholder="ä¾‹å¦‚: 192.168.1.100" value="${ip}" required></td>
                <td><input type="text" class="server-port" placeholder="22" value="${port}"></td>
                <td><button type="button" class="remove-btn" onclick="removeServerRow(this)">ğŸ—‘ï¸ åˆ é™¤</button></td>
            `;
            serverTableBody.appendChild(row);
        }

        // Remove server row
        window.removeServerRow = function (btn) {
            const row = btn.closest('tr');
            row.remove();
            serverCount--;

            // Show empty message if no servers
            if (serverTableBody.children.length === 0) {
                serverTableBody.innerHTML = `
                    <tr class="empty-row">
                        <td colspan="3" class="empty-table-message">
                            æš‚æ— æœåŠ¡å™¨ï¼Œç‚¹å‡»ä¸‹æ–¹"æ·»åŠ æœåŠ¡å™¨"æŒ‰é’®å¼€å§‹æ·»åŠ 
                        </td>
                    </tr>
                `;
            }
        };

        // Get servers from table
        function getServersFromTable() {
            const servers = [];
            const rows = serverTableBody.querySelectorAll('tr:not(.empty-row)');
            rows.forEach(row => {
                const ip = row.querySelector('.server-ip').value.trim();
                const port = row.querySelector('.server-port').value.trim() || '22';
                if (ip) {
                    servers.push(`${ip}:${port}`);
                }
            });
            return servers;
        }

        // Load domains on page load
        loadDomains();

        // Refresh button handler
        refreshDomainsBtn.addEventListener('click', loadDomains);

        // Add server button handler
        addServerBtn.addEventListener('click', () => {
            addServerRow();
        });

        // Handle radio button styling
        document.querySelectorAll('input[name="target_mode"]').forEach(radio => {
            radio.addEventListener('change', function () {
                radioOptions.forEach(opt => opt.classList.remove('selected'));
                this.closest('.radio-option').classList.add('selected');

                if (this.value === 'specific') {
                    specificIpsGroup.style.display = 'block';
                } else {
                    specificIpsGroup.style.display = 'none';
                }
            });
        });

        form.addEventListener('submit', async (e) => {
            e.preventDefault();

            const formData = new FormData();
            formData.append('domain', domainSelect.value);
            formData.append('target_mode', document.querySelector('input[name="target_mode"]:checked').value);

            // If specific mode, get servers from table
            if (document.querySelector('input[name="target_mode"]:checked').value === 'specific') {
                const servers = getServersFromTable();
                if (servers.length === 0) {
                    alert('è¯·è‡³å°‘æ·»åŠ ä¸€ä¸ªæœåŠ¡å™¨');
                    return;
                }
                formData.append('specific_ips', servers.join('\n'));
            }

            // Clear previous logs
            logContainer.innerHTML = '';
            logContainer.classList.add('active');

            // Disable submit button
            submitBtn.disabled = true;
            btnText.textContent = 'åŒæ­¥ä¸­...';

            try {
                const response = await fetch('/sync', {
                    method: 'POST',
                    body: formData
                });

                if (!response.ok) {
                    const errorText = await response.text();
                    addLog(errorText, 'error');
                    return;
                }

                const reader = response.body.getReader();
                const decoder = new TextDecoder();

                while (true) {
                    const { done, value } = await reader.read();
                    if (done) break;

                    const chunk = decoder.decode(value);
                    const lines = chunk.split('\n');

                    for (const line of lines) {
                        if (line.startsWith('data: ')) {
                            const message = line.substring(6);
                            if (message === '[SUCCESS]') {
                                addLog('âœ“ æ‰€æœ‰æœåŠ¡å™¨åŒæ­¥æˆåŠŸï¼', 'done');
                            } else if (message === '[FAILED]') {
                                addLog('âœ— åŒæ­¥å¤±è´¥ï¼Œéƒ¨åˆ†æœåŠ¡å™¨æœªèƒ½æˆåŠŸåŒæ­¥', 'error');
                            } else if (message === '[DONE]') {
                                // Task completed, no additional message needed
                            } else if (message !== '[KEEPALIVE]') {
                                addLog(message);
                            }
                        }
                    }
                }
            } catch (error) {
                addLog(`è¿æ¥é”™è¯¯: ${error.message}`, 'error');
            } finally {
                submitBtn.disabled = false;
                btnText.textContent = 'å¼€å§‹åŒæ­¥';
            }
        });

        function addLog(message, type = 'info') {
            const logLine = document.createElement('div');
            logLine.className = `log-line ${type}`;
            logLine.textContent = message;
            logContainer.appendChild(logLine);
            logContainer.scrollTop = logContainer.scrollHeight;
        }
    </script>
